<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All cocktails</h1>
      <ul class="list-group">
        <% @cocktails.each do |cocktail| %>
          <li class="list-group-item">

            <% if cocktail.photo.attached? %>

            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">

            <% else %>


            <% end %>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>

            </div>

          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class= "btn-primary">
  <%= link_to 'Add a new cocktail', new_cocktail_path %>
  </div>
</div>

<%= link_to "Add New Cocktail", new_cocktail_path, class: "btn btn-warning" %>

